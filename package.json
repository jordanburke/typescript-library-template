{
  "name": "-template",
  "version": "7.0.0",
  "description": "A basic template for creating a TypeScript library and Publishing it to NPM.",
  "keywords": [
    "typescript",
    "template",
    "tsdown",
    "npm"
  ],
  "author": "jordan.burke@gmail.com",
  "license": "MIT",
  "homepage": "https://github.com/jordanburke/typescript-library-template",
  "repository": {
    "type": "git",
    "url": "https://github.com/jordanburke/typescript-library-template"
  },
  "scripts": {
    "validate": "pnpm format && pnpm lint && pnpm test && pnpm build",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint ./src --fix",
    "lint:check": "eslint ./src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "build": "rimraf dist && cross-env NODE_ENV=production tsdown",
    "build:watch": "tsdown --watch",
    "dev": "tsdown --watch",
    "prepublishOnly": "pnpm validate",
    "ts-types": "tsc"
  },
  "devDependencies": {
    "@types/node": "^22.19.1",
    "tsdown": "^0.16.6",
    "typescript-template-configs": "^4.0.0"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "lib",
    "dist"
  ],
  "prettier": "typescript-template-configs",
  "packageManager": "pnpm@10.23.0+sha512.21c4e5698002ade97e4efe8b8b4a89a8de3c85a37919f957e7a0f30f38fbc5bbdd05980ffe29179b2fb6e6e691242e098d945d1601772cad0fef5fb6411e2a4b"
}
